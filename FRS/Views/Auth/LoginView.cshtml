@model FRS.Models.LoginDetails
@{
    ViewBag.Title = "LoginView";
    Layout = "~/Views/Shared/_LayoutPageLogin.cshtml";
}

<h2 class="text-center">LoginView</h2>
@if(ViewBag.ErrorMessage != null)
{
    <div class="alert alert-warning">
        @ViewBag.ErrorMessage
    </div>
}


@using (Html.BeginForm("Login", "Auth", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-group row">
        <label for="staticEmail" class="col-sm-2 col-form-label">Username</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(model => model.UserID, new { placeholder = "Username", @class = "form-control" })            
        </div>
    </div>
    <div class="form-group row">
        <label for="inputPassword" class="col-sm-2 col-form-label">Password</label>
        <div class="col-sm-10">            
            @Html.PasswordFor(model => model.Password, new { placeholder = "Password", @class = "form-control" })
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-12" >
            <button type="submit" class="btn btn-default">Login</button>
        </div>
    </div>
}




