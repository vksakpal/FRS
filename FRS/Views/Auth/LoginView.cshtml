@model FRS.Models.LoginDetails
@{
    ViewBag.Title = "LoginView";
    Layout = "~/Views/Shared/_LayoutPageLogin.cshtml";
}

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-warning">
        @ViewBag.ErrorMessage
    </div>
}

@*<div class="jumbotron">*@

@using (Html.BeginForm("Login", "Auth", FormMethod.Post,new { style = "border:1px solid #03256C;border-radius:5px;margin-top:10%;" }))
{
    <h2 class="text-center" style="background-color: #03256C;color: #fff;padding-top: 10px;padding-bottom: 10px;margin-top:0px;border-top-left-radius:5px;border-top-right-radius:5px;">FRS - Login</h2>

    @Html.AntiForgeryToken()
    <div class="form-group row" style="margin-left: 20%;margin-top:30px;">
        <label for="staticEmail" class="col-sm-2 col-form-label">Username:</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(model => model.UserID, new { placeholder = "Username", @class = "form-control" })
        </div>
    </div>
    <div class="form-group row" style="margin-left: 20%;">
        <label for="inputPassword" class="col-sm-2 col-form-label">Password:</label>
        <div class="col-sm-10">
            @Html.PasswordFor(model => model.Password, new { placeholder = "Password", @class = "form-control" })
        </div>
    </div>

    <div class="form-group row" style="margin-left: 20%;">
        <div class="col-sm-12">
            <button type="submit" class="btn btn-default btn-primary">Login</button>
        </div>
    </div>
}
@*</div>*@




