<table id="faultdetailsgrid" class="table table-bordered">
    <thead>
        <tr>
            <th>Customer Name</th>
            <th>Fault Type</th>
            <th>Fault Description</th>
            <th>Product Name</th>
            <th>Status</th>
            <th>Assigned User</th>
            <th>Reoprted Date</th>
            <th>Resolved Date</th>
        </tr>
    </thead>
</table>

<script type="text/javascript">
    $(document).ready(function () {

        $("#faultdetailsgrid").DataTable({
            ajax: {
                url: "@Url.Action("GetFaultList","FaultManagement")",
                type: "GET",
                data: { "status": 1 }
            },
            columns: [
                { "data": "CustomerName" },
                { "data": "FaultTypeDescription" },
                { "data": "FaultDescription" },
                { "data": "ProductName" },
                { "data": "StatusDescription" },
                { "data": "UserID" },
                { "data": "FaultReportingDate" },
                { "data": "FaultResolvedDate" }
            ]
        });
    });
</script>
